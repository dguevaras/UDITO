{
  "wake_word": {
    "name": "UDITO"
  },
  "model": {
    "framework": "tflite",
    "path": "WakeWord-project/micro_model.tflite"
  },
  "audio": {
    "sample_rate": 16000,
    "channels": 1,
    "dtype": "float32"
  },
  "features": {
    "type": "mfcc",
    "n_mfcc": 13,
    "frames": 100,
    "frame_length_ms": 25,
    "frame_step_ms": 10
  },
  "processing": {
    "block_duration_sec": 1.0,
    "chunk_ms": 80,
    "calibrate_secs": 3.0
  },
  "detection": {
    "threshold_voice": 0.0002,
    "wakeword_threshold": 0.49,
    "sensitivity": 0.6,
    "hits_required": 2,
    "cool_down_sec": 3.0
  },
  "logging": {
    "level": "INFO",
    "show_probabilities": true
  }
}
